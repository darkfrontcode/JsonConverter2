@import '../../../../../stylus/colors/*'

:host
	display flex
	flex-grow 1

#card-list
	box-sizing border-box
	padding 40px 0 0 0
	overflow-y scroll
	
	&::-webkit-scrollbar
		width 6px

	&::-webkit-scrollbar-track
		background-color transparent


	&::-webkit-scrollbar-thumb
		border-radius 6px
		background $blue-light

#no-contacts
	box-sizing border-box
	border-radius 3px
	border 2px solid #7ac0f8
	padding 80px 150px
	font-family Lobster,cursive
	font-size 30px
	color white