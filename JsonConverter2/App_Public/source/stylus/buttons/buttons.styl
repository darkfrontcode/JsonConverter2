/* ==========================================================================
	-- Buttons
========================================================================== */

@import '../colors/*'


.btn-green
	transition background-color .25s
	font-family Open Sans,sans-serif
	box-sizing border-box
	font-weight 700
	font-size 14px
	text-transform uppercase
	color #fff
	border-radius 6px
	background-color $green-default
	padding 13px 20px
	margin 0
	border 0
	
	&:hover:not(:disabled)
		background-color $green-light


.btn-green:disabled
{
	opacity: .5
}

.btn-red
{
	transition: background-color .25s;
	font-family: Open Sans,sans-serif;
	box-sizing: border-box;
	font-weight: 700;
	font-size: 14px;
	text-transform: uppercase;
	color: #fff;
	border-radius: 6px;
	background-color: #b65a5a;
	padding: 13px 0;
	margin: 0;
	border: 0;
}

.btn-red:hover
{
	background: #d37878;
}