:host
	position relative
	box-sizing border-box
	border-radius 3px
	border 2px solid #7ac0f8
	padding 40px
	width 306px
	height 450px
	margin auto auto 40px auto
	display block
	
	i.fa.fa-times-circle
		transition color .25s
		position absolute
		right 20px
		top 20px
		color #26a69a
		font-size 18px
		cursor pointer
		
		&:hover
			color #80cbc4
	
	h3
		font-family Lobster,cursive
		font-size 24px
		color white
		margin 0 0 40px 0;

	.phone
	.email
	.message
		font-family Lobster,cursive
		font-size 16px
		color #7ac0f8

	.phone
		margin-bottom 10px

	.email
		margin-bottom 40px

	.subject
		font-family Lobster,cursive
		font-size 16px
		color white
		margin-bottom 40px