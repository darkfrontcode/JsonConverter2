/* ==========================================================================
	-- Reset
========================================================================== */

@import './main'
@import './normalize'

*
	margin 0
	padding 0

body
section
nav
aside
menu
header
footer
article
h1
h2
h3
h4
h5
h6
p
div
span
a
input
fieldset
	position relative
	line-height 1em
	font-weight normal

a:link
a:visited
a:active
	text-decoration none
	color inherit
	
img
	border 0

ul
	list-style none
	
a
	cursor pointer
	
[class*='col-']
[class^='col-']
.container-fluid
	padding 0
	
.row
	margin-left 0
	margin-right 0

.grow
	display flex
	flex-grow 1
	
.shrink
	display flex
	flex-shrink 0

.column
	display flex
	flex-direction column

.nowrap
	display flex
	flex-wrap nowrap